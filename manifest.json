{
  "name": "GenHash",
  "version": "0.0.1",
  "description": "A lightweight extension that generates random strings and hashes text using well-known algorithms, locally.",
  "manifest_version": 3,

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["storage", "clipboardWrite"]
}
